<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/order_button1"
        android:layout_marginLeft="@dimen/margins_all"
        android:layout_marginRight="@dimen/margins_all"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantity_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/order_button1"
        android:layout_marginLeft="@dimen/margins_all" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margins_all"
        android:layout_marginRight="@dimen/margins_all"
        android:textStyle="bold" />


    <Button
        android:id="@+id/order_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginRight="@dimen/margins_all"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/order" />
</RelativeLayout>